{
  "name": "stitches",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build:wasm \"build-only {@}\" --",
    "build:wasm": "yarn --cwd ./packages/scheduler build --target deno",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@primevue/themes": "^4.0.7",
    "@stitches/scheduler": "workspaces:*",
    "@svgdotjs/svg.js": "^3.2.4",
    "@vue-js-cron/core": "^5.2.0",
    "@vueuse/core": "^11.1.0",
    "class-transformer": "^0.5.1",
    "cron-parser": "^4.9.0",
    "cronstrue": "^2.50.0",
    "fuse.js": "^7.0.0",
    "normalize.css": "^8.0.1",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^4.0.1",
    "primeicons": "^7.0.0",
    "primevue": "^4.0.7",
    "reflect-metadata": "^0.2.2",
    "ulidx": "^2.4.1",
    "vue": "^3.4.29",
    "vue-router": "^4.3.3",
    "vuedraggable": "git+https://github.com/zhyswan/vue.draggable.next.git#master"
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^3.0.0",
    "@primevue/auto-import-resolver": "^4.0.7",
    "@rushstack/eslint-patch": "^1.8.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.14.5",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "cypress": "^13.12.0",
    "eslint": "^8.57.0",
    "eslint-plugin-cypress": "^3.3.0",
    "eslint-plugin-vue": "^9.23.0",
    "jsdom": "^24.1.0",
    "npm-run-all2": "^6.2.0",
    "postcss-preset-env": "^10.0.5",
    "prettier": "^3.2.5",
    "start-server-and-test": "^2.0.4",
    "svgo": "^3.3.2",
    "typescript": "~5.4.0",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.3.1",
    "vite-plugin-top-level-await": "^1.4.4",
    "vite-plugin-vue-devtools": "^7.3.1",
    "vite-plugin-wasm": "^3.3.0",
    "vite-svg-loader": "^5.1.0",
    "vitest": "^1.6.0",
    "vue-tsc": "^2.0.21",
    "wasm-pack": "^0.13.0"
  },
  "packageManager": "yarn@4.1.1"
}
